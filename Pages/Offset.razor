<title>SRAM Offset Edit (Web)</title>

<div class="mainDiv">
	<h1 class="whiteText">@Res.SramOffsetEdit</h1>
	<br />

	<EditForm Model="@ViewModel">
		<p>
			<label class="yellowText">@Res.FileRegion:@Ns</label><InputSelectEnum @bind-Value="@ViewModel.Region" style=@RegionStyle />
			<p>
				<label class="yellowText">@Res.SramFile (*.srm)</label>
					<br/>
				<label>@Res.File:@Ns</label>
				*) <InputFile OnChange="@OnCurrentFileChange" style=@ButtonStyle />
					<br/>
				<label>@Res.Game:@Ns</label>
				<InputSelectEnum @bind-Value="@ViewModel.CurrentGame" style=@CurrentGameStyle />
			</p>

			<p>
				<label>@Res.Offset:@Ns</label>
				<InputNumber @bind-Value="@ViewModel.Offset" />
				<button class="btn btn-primary" @onclick="@(() => ViewModel.GetOffsetValue())" disabled="@(!ViewModel.CanGet)" title="@Res.HintButtonGetOffsetValue"><span class="iconify" data-icon="oi-magnifying-glass" data-inline="false" /></button>
				<br />
				<label>@Res.OffsetValue:@Ns</label>
				<InputNumber @bind-Value="@ViewModel.OffsetValue" />
				<button class="btn btn-primary" @onclick="@(() => ViewModel.SetOffsetValue())" disabled="@(!ViewModel.CanSet)" title="@Res.HintButtonSetOffsetValue"><span class="iconify" data-icon="oi-pencil" data-inline="false" /></button>
				<br />
			</p>

			<p>
				<label class="whiteText">*) @Res.Mandatory</label>
			</p>

			<button class="btn btn-primary" @onclick="@ViewModel.SaveAndDownloadAsync" disabled="@SaveButtonDisabled" title="@Res.HintButtonDownloadChangedFile"><span class="iconify" data-icon="oi-cloud-download" data-inline="false" /></button>
		</p>
	</EditForm>

	<div class="result">
		@ViewModel.OutputMessage
	</div>
</div>