@using WebApp.SoE.Helpers
@using WebApp.SoE.Extensions

@{
    var sp = "&nbsp;".ToMarkup();
    var del = "&nbsp;&nbsp;".ToMarkup();
    var quickLinkOpener = "<|".ToMarkup();
    var quickLinkCloser = "|>".ToMarkup();
}

<div>
<!-- Quick links -->
    <ol class="nav flex-column"  title="@TooltipRandomizer.NextTooltip()">
        <li class="nav-item quicklinks">
            <NavLink class="nav-link" title="@TooltipRandomizer.NextTooltip()">
                @quickLinkOpener @sp
                <a href="@PageUris.RosettaStone" title="@RandomResTooltip[Res.MenuTooltipRosettaStone]">
                    <span class="iconify" data-icon="oi-document"/>
                </a>
                @del
                <a href="@PageUris.Awesome" title="@RandomResTooltip[Res.MenuTooltipAwesome]">
                    <span class="iconify" data-icon="oi-star"/>
                </a>
                @del
                <a href="@PageUris.Community" title="@RandomResTooltip[Res.MenuTooltipCommunity]">
                    <span class="iconify" data-icon="oi-people"/>
                </a>
                @del
                <a href="@PageUris.Discord" target="_" title="@RandomResTooltip[Res.MenuTooltipDiscord]">
                    <img src="media/Discord.png" class="discord" />
                </a>
                @del
                <a href="@PageUris.Sources" title="@RandomResTooltip[Res.MenuTooltipSources]">
                    <img src="media/GitHub.png" class="github" />
                </a>
                @sp @quickLinkCloser
            </NavLink>
            <NavLink class="nav-link" title="@TooltipRandomizer.NextTooltip()">
                @quickLinkOpener @sp
                <a href="@PageUris.Comparison" title="@RandomResTooltip[Res.MenuTooltipComparison]">
                    <span class="iconify" data-icon="oi-magnifying-glass"/>
                </a>
                @del
                <a href="@PageUris.OffsetEditing" title="@RandomResTooltip[Res.MenuTooltipOffsetEdit]">
                    <span class="iconify" data-icon="oi-pencil"/>
                </a>
                @del
                <a href="@PageUris.ConsoleApp" title="@RandomResTooltip[Res.MenuTooltipChangeLog]">
                    <span class="iconify" data-icon="oi-cloud-download"/>
                </a>
                @del
                <a href="@PageUris.Imagery" title="@RandomResTooltip[Res.MenuTooltipImagery]">
                    <span class="iconify" data-icon="oi-image"/>
                </a>
                @del
                <a href="@PageUris.Guides" title="@RandomResTooltip[Res.MenuTooltipGuides]">
                    <span class="iconify" data-icon="oi-document"/>
                </a>
                @sp @quickLinkCloser
            </NavLink>
        </li>
    </ol>
    <!-- / Quick links -->
    <!-- S-RAM Format -->
    <ol class="nav flex-column firstRow" title="@TooltipRandomizer.NextTooltip()">
        <li class="nav-item px-3">
            <a class="nav-link" href="@PageUris.Goals" title="@RandomResTooltip[Res.MenuTooltipGoals]">
                <span class="@(_sramFormat ? "oi oi-zoom-out" : "oi oi-zoom-in")"/> 
                <span class="oi oi-code"/> @Res.MenuSramFormat.ReplaceSpaces() 
            </a>
  
            @if (_sramFormat)
            {
                <ol class="nav flex-column">
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="@PageUris.Goals" title="@RandomResTooltip[Res.MenuTooltipGoals]">
                            <span class="oi oi-flag"/> @Res.MenuGoals.ReplaceSpaces()
                        </NavLink>
                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="@PageUris.Unknowns" title="@RandomResTooltip[Res.MenuTooltipTheUnknowns]">
                            <span class="oi oi-question-mark"/> @Res.MenuTheUnknowns.ReplaceSpaces()
                        </NavLink>
                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="@PageUris.Exploring" title="@RandomResTooltip[Res.MenuTooltipExploring]">
                            <span class="oi oi-thumb-up"/> @Res.MenuExploring.ReplaceSpaces()
                        </NavLink>
                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="@PageUris.RosettaStone" title="@RandomResTooltip[Res.MenuTooltipRosettaStone]">
                            <span class="oi oi-document"/> @Res.MenuRosettaStone.ReplaceSpaces()
                        </NavLink>
                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="@PageUris.Glossary" title="@RandomResTooltip[Res.MenuTooltipGlossary]">
                            <span class="oi oi-document"/> @Res.MenuGlossary.ReplaceSpaces()
                        </NavLink>
                    </li>
                </ol>
            }
        </li>
    </ol>
    <!-- / S-RAM Format -->
    <!-- S-RAM Comparison -->
    <ol class="nav flex-column" title="@TooltipRandomizer.NextTooltip()">
        <li class="nav-item px-3">
            <a class="nav-link" href="@PageUris.Features" title="@RandomResTooltip[Res.MenuTooltipFeatures]">
                <span class="@(_sramComparison ? "oi oi-zoom-out" : "oi oi-zoom-in")"/>
                <span class="oi oi-eye"/> @Res.MenuSramComparison.ReplaceSpaces() 
            </a>
            @if (_sramComparison)
            {
                <ol class="nav flex-column">
                    <!-- Features -->
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="@PageUris.Features" title="@RandomResTooltip[Res.MenuTooltipFeatures]">
                            <span class="oi oi-circle-check"/> @Res.MenuFeatures.ReplaceSpaces()
                        </NavLink>
                    </li>
                    <!-- / Features -->
                    <!-- ConsoleApp -->
                    <li class="nav-item px-3">
                        <a class="nav-link" href="@PageUris.Imagery" title="@RandomResTooltip[Res.MenuTooltipImagery]">
                            <span class="@(_consoleApp ? "oi oi-zoom-out" : "oi oi-zoom-in")"/>
                            <span class="oi oi-command"/> @Res.MenuSramComparerCmdApp.ReplaceSpaces() 
                        </a>
                        @if (_consoleApp)
                        {
                            <ol class="nav flex-column">
                                <li class="nav-item px-3">
                                    <NavLink class="nav-link" href="@PageUris.Imagery" title="@RandomResTooltip[Res.MenuTooltipImagery]">
                                        <span class="oi oi-image"/> @Res.MenuImagery.ReplaceSpaces()
                                    </NavLink>
                                </li>
                                <li class="nav-item px-3">
                                    <NavLink class="nav-link" href="@PageUris.ChangelogConsole" title="@RandomResTooltip[Res.MenuTooltipChangeLog]">
                                        <span class="oi oi-arrow-circle-bottom"/> @Res.MenuChangeLog.ReplaceSpaces()
                                    </NavLink>
                                </li>
                                <li class="nav-item px-3">
                                    <NavLink class="nav-link" href="@PageUris.Guides" title="@RandomResTooltip[Res.MenuTooltipGuides]">
                                        <span class="oi oi-document"/> @Res.MenuGuides.ReplaceSpaces()
                                    </NavLink>
                                </li>
                            </ol>
                        }
                    </li>
                    <!-- / ConsoleApp -->
                    <!-- WebTools -->
                    <li class="nav-item px-3">
                        <a class="nav-link" href="@PageUris.Comparison" title="@RandomResTooltip[Res.MenuTooltipComparison]">
                            <span class="@(_webTools ? "oi oi-zoom-out" : "oi oi-zoom-in")"/>
                            <span class="oi oi-wrench" /> @Res.MenuWebTools.ReplaceSpaces() 
                        </a>
                        
                        @if (_webTools)
                        {
                            <ol class="nav flex-column">
                                <li class="nav-item px-3">
                                    <NavLink class="nav-link" href="@PageUris.Comparison" title="@RandomResTooltip[Res.MenuTooltipComparison]">
                                        <span class="oi oi-eye"/> @Res.MenuWebComparison.ReplaceSpaces()
                                    </NavLink>
                                </li>
                                <li class="nav-item px-3">
                                    <NavLink class="nav-link" href="@PageUris.OffsetEditing" title="@RandomResTooltip[Res.MenuTooltipOffsetEdit]">
                                        <span class="oi oi-pencil"/> @Res.MenuWebOffsetEdit.ReplaceSpaces()
                                    </NavLink>
                                </li>
                            </ol>
                        }
                    </li>
                    <!-- / WebTools -->
                </ol>
                <!-- Tutorials -->
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="@PageUris.Tutorials" title="@RandomResTooltip[Res.MenuTooltipTutorials]">
                        <span class="oi oi-document"/> @Res.MenuTutorials.ReplaceSpaces()
                    </NavLink>
                </li>
                <!-- / Tutorials -->
            }
        </li>
    </ol>
    <!-- / S-RAM Comparison -->
    <!-- Other -->
    <ol class="nav flex-column" title="@TooltipRandomizer.NextTooltip()">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="@PageUris.Sources" title="@RandomResTooltip[Res.MenuTooltipSources]">
                <img src="media/Github.png" class="github" />@(sp)GitHub
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="@PageUris.Contributing" title="@RandomResTooltip[Res.MenuTooltipContribute]">
                <span class="oi oi-heart"/> @Res.MenuContributing.ReplaceSpaces()
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="@PageUris.Community" title="@RandomResTooltip[Res.MenuTooltipCommunity]">
                <span class="oi oi-people"/> @Res.MenuCommunity.ReplaceSpaces()
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="@PageUris.Awesome" title="@RandomResTooltip[Res.MenuTooltipAwesome]">
                <span class="oi oi-star"/> @Res.MenuAwesomeSoE.ReplaceSpaces()
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="@PageUris.About" title="@RandomResTooltip[Res.MenuTooltipAbout]">
                <span class="oi oi-info"/> @Res.MenuAbout.ReplaceSpaces()
            </NavLink>
        </li>
    </ol>
    <!-- / Other -->
</div>