@using WebApp.SoE.Helpers
@using WebApp.SoE.Extensions

@{
    var sp = "&nbsp;".ToMarkup();
    var del = "&nbsp;&nbsp;".ToMarkup();
    var quickLinkOpener = "<|".ToMarkup();
    var quickLinkCloser = "|>".ToMarkup();
}

<div>
<!-- Quick links -->
    <ol class="nav flex-column"  title="@TooltipRandomizer.NextTooltip()">
        <li class="nav-item quicklinks">
            <NavLink class="nav-link" title="@TooltipRandomizer.NextTooltip()">
                @quickLinkOpener @sp
                <a href="@PageUris.RosettaStone" title="@GetRes(nameof(Res.MenuTitleRosettaStone))">
                    <span class="iconify" data-icon="oi-document"/>
                </a>
                @del
                <a href="@PageUris.Awesome" title="@GetRes(nameof(Res.MenuTitleAwesome))">
                    <span class="iconify" data-icon="oi-star"/>
                </a>
                @del
                <a href="@PageUris.Community" title="@GetRes(nameof(Res.MenuTitleCommunity))">
                    <span class="iconify" data-icon="oi-people"/>
                </a>
                @del
                <a href="@PageUris.Discord" target="_" title="@GetRes(nameof(Res.MenuTitleDiscord))">
                    <img src="media/Discord.png" class="discord" />
                </a>
                @del
                <a href="@PageUris.Sources" title="@GetRes(nameof(Res.MenuTitleSources))">
                    <img src="media/GitHub.png" class="github" />
                </a>
                @sp @quickLinkCloser
            </NavLink>
            <NavLink class="nav-link" title="@TooltipRandomizer.NextTooltip()">
                @quickLinkOpener @sp
                <a href="@PageUris.Comparing" title="@GetRes(nameof(Res.MenuTitleCompare))">
                    <span class="iconify" data-icon="oi-magnifying-glass"/>
                </a>
                @del
                <a href="@PageUris.OffsetEditing" title="@GetRes(nameof(Res.MenuTitleOffsetEdit))">
                    <span class="iconify" data-icon="oi-pencil"/>
                </a>
                @del
                <a href="@PageUris.ConsoleApp" title="@GetRes(nameof(Res.MenuTitleChangeLog))">
                    <span class="iconify" data-icon="oi-cloud-download"/>
                </a>
                @del
                <a href="@PageUris.Imagery" title="@GetRes(nameof(Res.MenuTitleImagery))">
                    <span class="iconify" data-icon="oi-image"/>
                </a>
                @del
                <a href="@PageUris.Guides" title="@GetRes(nameof(Res.MenuTitleGuides))">
                    <span class="iconify" data-icon="oi-document"/>
                </a>
                @sp @quickLinkCloser
            </NavLink>
        </li>
    </ol>
    <!-- / Quick links -->
    <!-- S-RAM Format -->
    <ol class="nav flex-column firstRow" title="@TooltipRandomizer.NextTooltip()">
        <li class="nav-item px-3">
            <a class="nav-link" href="@PageUris.Goals" title="@GetRes(nameof(Res.MenuTitleGoals))">
                <span class="@(_sramFormat ? "oi oi-zoom-out" : "oi oi-zoom-in")"/> 
                <span class="oi oi-code"/> @Res.MenuSramFormat.ReplaceSpaces() 
            </a>
  
            @if (_sramFormat)
            {
                <ol class="nav flex-column">
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="@PageUris.Goals" title="@GetRes(nameof(Res.MenuTitleGoals))">
                            <span class="oi oi-flag"/> @Res.MenuGoals.ReplaceSpaces()
                        </NavLink>
                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="@PageUris.Unknowns" title="@GetRes(nameof(Res.MenuTitleTheUnknowns))">
                            <span class="oi oi-question-mark"/> @Res.MenuTheUnknowns.ReplaceSpaces()
                        </NavLink>
                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="@PageUris.Exploring" title="@GetRes(nameof(Res.MenuTitleExploring))">
                            <span class="oi oi-thumb-up"/> @Res.MenuExploring.ReplaceSpaces()
                        </NavLink>
                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="@PageUris.RosettaStone" title="@GetRes(nameof(Res.MenuTitleRosettaStone))">
                            <span class="oi oi-document"/> @Res.MenuRosettaStone.ReplaceSpaces()
                        </NavLink>
                    </li>
                </ol>
            }
        </li>
    </ol>
    <!-- / S-RAM Format -->
    <!-- S-RAM Comparison -->
    <ol class="nav flex-column" title="@TooltipRandomizer.NextTooltip()">
        <li class="nav-item px-3">
            <a class="nav-link" href="@PageUris.Features" title="@GetRes(nameof(Res.MenuTitleFeatures))">
                <span class="@(_sramComparison ? "oi oi-zoom-out" : "oi oi-zoom-in")"/>
                <span class="oi oi-eye"/> @Res.MenuSramComparison.ReplaceSpaces() 
            </a>
            @if (_sramComparison)
            {
                <ol class="nav flex-column">
                    <!-- Features -->
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="@PageUris.Features" title="@GetRes(nameof(Res.MenuTitleFeatures))">
                            <span class="oi oi-circle-check"/> @Res.MenuFeatures.ReplaceSpaces()
                        </NavLink>
                    </li>
                    <!-- / Features -->
                    <!-- ConsoleApp -->
                    <li class="nav-item px-3">
                        <a class="nav-link" href="@PageUris.Imagery" title="@GetRes(nameof(Res.MenuTitleImagery))">
                            <span class="@(_consoleApp ? "oi oi-zoom-out" : "oi oi-zoom-in")"/>
                            <span class="oi oi-command"/> @Res.MenuSramComparerCmdApp.ReplaceSpaces() 
                        </a>
                        @if (_consoleApp)
                        {
                            <ol class="nav flex-column">
                                <li class="nav-item px-3">
                                    <NavLink class="nav-link" href="@PageUris.Imagery" title="@GetRes(nameof(Res.MenuTitleImagery))">
                                        <span class="oi oi-image"/> @Res.MenuImagery.ReplaceSpaces()
                                    </NavLink>
                                </li>
                                <li class="nav-item px-3">
                                    <NavLink class="nav-link" href="@PageUris.ChangelogConsole" title="@GetRes(nameof(Res.MenuTitleChangeLog))">
                                        <span class="oi oi-arrow-circle-bottom"/> @Res.MenuChangeLog.ReplaceSpaces()
                                    </NavLink>
                                </li>
                                <li class="nav-item px-3">
                                    <NavLink class="nav-link" href="@PageUris.Guides" title="@GetRes(nameof(Res.MenuTitleGuides))">
                                        <span class="oi oi-document"/> @Res.MenuGuides.ReplaceSpaces()
                                    </NavLink>
                                </li>
                            </ol>
                        }
                    </li>
                    <!-- / ConsoleApp -->
                    <!-- WebTools -->
                    <li class="nav-item px-3">
                        <a class="nav-link" href="@PageUris.Comparing" title="@GetRes(nameof(Res.MenuTitleCompare))">
                            <span class="@(_webTools ? "oi oi-zoom-out" : "oi oi-zoom-in")"/>
                            <span class="oi oi-wrench" /> @Res.MenuWebTools.ReplaceSpaces() 
                        </a>
                        
                        @if (_webTools)
                        {
                            <ol class="nav flex-column">
                                <li class="nav-item px-3">
                                    <NavLink class="nav-link" href="@PageUris.Comparing" title="@GetRes(nameof(Res.MenuTitleCompare))">
                                        <span class="oi oi-eye"/> @Res.MenuWebComparison.ReplaceSpaces()
                                    </NavLink>
                                </li>
                                <li class="nav-item px-3">
                                    <NavLink class="nav-link" href="@PageUris.OffsetEditing" title="@GetRes(nameof(Res.MenuTitleOffsetEdit))">
                                        <span class="oi oi-pencil"/> @Res.MenuWebOffsetEdit.ReplaceSpaces()
                                    </NavLink>
                                </li>
                            </ol>
                        }
                    </li>
                    <!-- / WebTools -->
                </ol>
                <!-- Tutorials -->
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="@PageUris.Tutorials" title="@GetRes(nameof(Res.MenuTitleTutorials))">
                        <span class="oi oi-document"/> @Res.MenuTutorials.ReplaceSpaces()
                    </NavLink>
                </li>
                <!-- / Tutorials -->
                <!-- GitHub -->
                <ol class="nav flex-column">
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="@PageUris.Sources" title="@GetRes(nameof(Res.MenuTitleSources))">
                            <img src="media/Github.png" class="github" />@(sp)GitHub
                        </NavLink>
                    </li>
                </ol>
                <!-- / GitHub -->
            }
        </li>
    </ol>
    <!-- / S-RAM Comparison -->
    <!-- Other -->
    <ol class="nav flex-column" title="@TooltipRandomizer.NextTooltip()">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="@PageUris.Contributing" title="@GetRes(nameof(Res.MenuTitleContribute))">
                <span class="oi oi-heart"/> @Res.MenuContributing.ReplaceSpaces()
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="@PageUris.Community" title="@GetRes(nameof(Res.MenuTitleCommunity))">
                <span class="oi oi-people"/> @Res.MenuCommunity.ReplaceSpaces()
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="@PageUris.Awesome" title="@GetRes(nameof(Res.MenuTitleAwesome))">
                <span class="oi oi-star"/> @Res.MenuAwesomeSoE.ReplaceSpaces()
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="@PageUris.About" title="@GetRes(nameof(Res.MenuTitleAbout))">
                <span class="oi oi-info"/> @Res.MenuAbout.ReplaceSpaces()
            </NavLink>
        </li>
    </ol>
    <!-- / Other -->
</div>